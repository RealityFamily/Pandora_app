<UserControl x:Class="Pandora.MVVM.Views.GroupOfItems"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Pandora.MVVM.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <TextBlock x:Name="GroupName"
                   Foreground="#e9eaec"
                   FontSize="18"
                   Margin="4 0 0 10"/>
        <ListBox x:Name="GroupItems"
                 Style="{StaticResource GroupsItem}"
                 Background="Gray"
                 SelectionChanged="GroupItems_SelectionChanged"/>
    </StackPanel>
</UserControl>
